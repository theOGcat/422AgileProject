        xmlns:local="clr-namespace:BookStoreGUI"
        mc:Ignorable="d"
        Title="CheakOut" Height="450" Width="800">
    <Grid>
        <Button Content="Check Out" Click="Check_out_click" HorizontalAlignment="Left" Margin="507,321,0,0" VerticalAlignment="Top" Width="175" Height="52" FontSize="25"/>
       
        <TextBox Name ="PriceCount1" HorizontalAlignment="Left" Height="190" Margin="492,80,0,0" TextWrapping="Wrap" 
