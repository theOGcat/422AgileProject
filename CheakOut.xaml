        <Button Content="Edit" x:Name="loginButton" Click="EditButton_Click" HorizontalAlignment="Left" Margin="82,259,0,0" VerticalAlignment="Top" Width="148" Height="45" FontSize="18" RenderTransformOrigin="0.473,-0.133"/>
        
        <TextBox Name ="DefaultNum" HorizontalAlignment="Left" Height="42" Margin="10,101,0,0" 
                 TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="309" FontSize="20" />
        
        <TextBox x:Name ="Address" HorizontalAlignment="Left" Height="42" Margin="10,196,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="309" FontSize="20" TextChanged="Address_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="146"><Run Text="Card Number"/><Run Text=" "/><Run Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="146"><Run Text="Address"/><Run Text=" "/><Run Text=":"/></TextBlock>
        <TextBox Name ="UID" HorizontalAlignment="Left" Height="23" Margin="324,321,0,0" TextWrapping="Wrap" Text="User Id :" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
